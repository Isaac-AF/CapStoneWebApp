<form action="/finish_workout" method="post">
    <input type="hidden" name="query_workout_id" value="<%= params.fetch("workout_id") %>">
    <input type="submit" value="Finish Workout" />
</form>

<form action="/exercises">
    <input type="submit" value="Manage Exercises" />
</form>

<hr>

<div>
  <div>
    <h2>
      Add a new workout set
    </h2>

    <form action="/insert_workout_set" method="post">
  <div>
    <input type="hidden" name="query_workout_id" value="<%= params.fetch("workout_id") %>">
  </div>

  <div>
    <label for="exercise_id_box">
      Exercise
    </label>
    <select id="exercise_id_box" name="query_exercise_id">
      <% Exercise.all.each do |exercise| %>
        <option value="<%= exercise.id %>"><%= exercise.exercise_name %></option>
      <% end %>
    </select>
  </div>
  <div>
    <label for="workout_set_number">
      Set Number
    </label>
    <input type="text" id="workout_set_number" name="query_workout_set_number">
  </div>

  <div>
    <label for="workout_reps_count_box">
      Reps
    </label>
    <input type="text" id="workout_reps_count_box" name="query_workout_reps_count">
  </div>

  <div>
    <label for="weight_box">
      Weight
    </label>
    <input type="text" id="weight_box" name="query_weight">
  </div>

  <button>
    Create workout set
  </button>
  </form>
  </div>
</div>

<hr>
<h2>Workout Sets</h2>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Exercise
        </th>

        <th>
          Set Number
        </th>

        <th>
          Reps
        </th>

        <th>
          Weight
        </th>
       
        <th>
        </th>
      </tr>

      <% @list_of_workout_sets.each do |a_workout_set| %>
        <tr>
          <td><%= a_workout_set.exercise.exercise_name %></td>
          <td><%= a_workout_set.set_number %></td>
          <td><%= a_workout_set.workout_reps_count %></td>
          <td><%= a_workout_set.weight %></td>
          <td>
            <a href="/workout_sets/<%= params.fetch("workout_id") %>/<%= a_workout_set.id %>">
              Show details
            </a>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>

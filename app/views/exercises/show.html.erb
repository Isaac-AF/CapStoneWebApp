<div class="container my-4">

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Exercise Details</h1>
    <a href="/exercises" class="btn btn-outline-secondary">‚Üê Go Back</a>
  </div>

  <div class="mb-4">
    <form action="/delete_exercise/<%= @the_exercise.id %>" method="post" onsubmit="return confirm('Are you sure you want to delete this exercise?');">
      <input type="hidden" name="exercise_id" value="<%= @the_exercise.id %>">
      <button type="submit" class="btn btn-danger">Delete Exercise</button>
    </form>
  </div>

  <dl class="row">
    <dt class="col-sm-3">Exercise name</dt>
    <dd class="col-sm-9"><%= @the_exercise.exercise_name %></dd>

    <dt class="col-sm-3">Primary muscle</dt>
    <dd class="col-sm-9"><%= @the_exercise.primary_muscle %></dd>

    <dt class="col-sm-3">Secondary muscle</dt>
    <dd class="col-sm-9"><%= @the_exercise.secondary_muscle %></dd>

    <dt class="col-sm-3">Tertiary muscle</dt>
    <dd class="col-sm-9"><%= @the_exercise.tertiary_muscle %></dd>

    <dt class="col-sm-3">Created at</dt>
    <dd class="col-sm-9"><%= time_ago_in_words(@the_exercise.created_at) %> ago</dd>

    <dt class="col-sm-3">Updated at</dt>
    <dd class="col-sm-9"><%= time_ago_in_words(@the_exercise.updated_at) %> ago</dd>
  </dl>

  <hr>

  <div class="card p-4">
    <h2 class="h4 mb-3">Edit Exercise</h2>

    <form action="/modify_exercise/<%= @the_exercise.id %>" method="post">
      <div class="mb-3">
        <label for="exercise_name_box" class="form-label">Exercise name</label>
        <input type="text" class="form-control" id="exercise_name_box" name="query_exercise_name" value="<%= @the_exercise.exercise_name %>">
      </div>

      <div class="mb-3">
        <label for="primary_muscle_box" class="form-label">Primary muscle</label>
        <input type="text" class="form-control" id="primary_muscle_box" name="query_primary_muscle" value="<%= @the_exercise.primary_muscle %>">
      </div>

      <div class="mb-3">
        <label for="secondary_muscle_box" class="form-label">Secondary muscle</label>
        <input type="text" class="form-control" id="secondary_muscle_box" name="query_secondary_muscle" value="<%= @the_exercise.secondary_muscle %>">
      </div>

      <div class="mb-3">
        <label for="tertiary_muscle_box" class="form-label">Tertiary muscle</label>
        <input type="text" class="form-control" id="tertiary_muscle_box" name="query_tertiary_muscle" value="<%= @the_exercise.tertiary_muscle %>">
      </div>

      <button type="submit" class="btn btn-primary">Update Exercise</button>
    </form>
  </div>

</div>

<div>
  <div>
    <h1>
      Meal #<%= @the_meal.id %> details
    </h1>

    <div>
      <div>
        <a href="/meals">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_meal/<%= @the_meal.id %>">
          Delete meal
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Date consumed
      </dt>
      <dd>
        <%= @the_meal.date_consumed %>
      </dd>

      <dt>
        Food name
      </dt>
      <dd>
        <%= @the_meal.food_name %>
      </dd>

      <dt>
        Rating
      </dt>
      <dd>
        <%= @the_meal.rating %>
      </dd>

      <dt>
        Calories
      </dt>
      <dd>
        <%= @the_meal.calories %>
      </dd>

      <dt>
        Protein
      </dt>
      <dd>
        <%= @the_meal.protein %>
      </dd>

      <dt>
        Fats
      </dt>
      <dd>
        <%= @the_meal.fats %>
      </dd>

      <dt>
        Carbs
      </dt>
      <dd>
        <%= @the_meal.carbs %>
      </dd>

      <dt>
        Fiber
      </dt>
      <dd>
        <%= @the_meal.fiber %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @the_meal.user_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_meal.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_meal.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit meal
    </h2>

    <form action="/modify_meal/<%= @the_meal.id %>"  method="post" >
      <div>
        <label for="date_consumed_box">
          Date consumed
        </label>

        <input type="date" id="date_consumed_box" name="query_date_consumed" value="<%= @the_meal.date_consumed %>">
      </div>

      <div>
        <label for="food_name_box">
          Food name
        </label>

        <input type="text" id="food_name_box" name="query_food_name" value="<%= @the_meal.food_name %>">
      </div>

      <div>
        <label for="rating_box">
          Rating
        </label>

        <input type="text" id="rating_box" name="query_rating" value="<%= @the_meal.rating %>">
      </div>

      <div>
        <label for="calories_box">
          Calories
        </label>

        <input type="text" id="calories_box" name="query_calories" value="<%= @the_meal.calories %>">
      </div>

      <div>
        <label for="protein_box">
          Protein
        </label>

        <input type="text" id="protein_box" name="query_protein" value="<%= @the_meal.protein %>">
      </div>

      <div>
        <label for="fats_box">
          Fats
        </label>

        <input type="text" id="fats_box" name="query_fats" value="<%= @the_meal.fats %>">
      </div>

      <div>
        <label for="carbs_box">
          Carbs
        </label>

        <input type="text" id="carbs_box" name="query_carbs" value="<%= @the_meal.carbs %>">
      </div>

      <div>
        <label for="fiber_box">
          Fiber
        </label>

        <input type="text" id="fiber_box" name="query_fiber" value="<%= @the_meal.fiber %>">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_meal.user_id %>">
      </div>

      <button>
        Update meal
      </button>
    </form>
  </div>
</div>

<hr>
